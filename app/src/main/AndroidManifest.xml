        <service
            android:name=".services.CapturedDataService"
            android:enabled="true"
            android:exported="false">
        </service>

        <receiver
            android:name=".ConnectivityReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGED"/>
            </intent-filter>
        </receiver>

